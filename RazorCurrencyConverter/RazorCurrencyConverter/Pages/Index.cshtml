@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <header class="text-center">
        <h1 class="display-4">Core5 Razor Pages</h1>
        <h2>by @Model.FullName</h2>
    </header>
    <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label for="name">Name</label>
            <input type="text" required placeholder="Your full name" asp-for="FullName">
        </p>
        <p class="col-sm-4">
            <label for="email">Email</label>
            <input type="email" required placeholder="Your email address" name="email">
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </p>
        <p class="col-sm-12">
            @ViewData["Message"]
        </p>
    </form>
</div>
